<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--================business admin rules===============-->
        <record id="business_admin" model="res.groups">
            <field name="name">Business Admin</field>
            <field name="comment">Business Admin Has Access to Everything</field>
            <field name="implied_ids" eval="[
                    (4,ref('base.group_user')),
                    (4,ref('base.group_multi_company')),
                    (4,ref('sales_team.group_sale_manager')),
                    (4,ref('website.group_website_designer')),
                    (4,ref('hr.group_hr_manager')),
                    (4,ref('base.group_system')),
                    (4,ref('base.group_partner_manager')),   	
                    (4,ref('base.group_private_addresses')),
                    (4,ref('base.group_allow_export')),    
                ]"
            />
        </record>

        <record id="buisness_admin_user_rules" model="ir.rule">
            <field name="name">business admin user rule</field>
            <field name="model_id" ref="base.model_res_users" />
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4,ref('crmfront.business_admin')),]"
            />
        </record>

    <!--============end kola admin rules===============-->

    <!--===================customer rules=================-->
        <record id="customer_portal" model="res.groups">
            <field name="name">Customer Portal</field>
            <field name="comment">A customer belongs to this user group</field>
            <field name="implied_ids" eval="[
                    (4,ref('base.group_portal')),
                    (4,ref('website.group_multi_website')),
                    (4,ref('base.group_multi_company')),
                ]"
            />
        </record>
    <!--================end customer rules================-->

    <record id="crm_product_rule" model="ir.rule">
        <field name="name">CRM Product rule</field>
        <field name="model_id" ref="model_product_template" />
        <field name="domain_force"> [
            ('company_id', 'in', company_ids), 
        ]
        </field>
    </record>

    <record id="make_invisible" model="res.groups">
        <field name="name">Invisible</field>
    </record>
</odoo>