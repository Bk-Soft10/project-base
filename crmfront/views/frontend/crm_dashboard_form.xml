<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="crm_dashboard_form" name="crm dashboard">
        <xpath expr="//t[@t-call='portal.portal_layout']" position="replace">
            <html lang="en">
                <t t-call="crmfront.crm_dashboard_head" />
                <body id="page-top">
                    <div id="wrapwrap">
                        <div id="wrapper">
                            <!--=== SIDEBAR===-->
                                <t t-call="crmfront.crm_dashboard_sidebar" />
                            <!--=== SIDEBAR===-->

                            <div id="content-wrapper" class="d-flex flex-column">
                                <div id="content">
                                    <!--===TOP BAR===-->
                                        <t t-call="crmfront.crm_dashboard_topbar" />
                                    <!--===TOP BAR===-->
                                    
                                    <div class="container-fluid">
                                        <h1 class="h3 mb-2 text-gray-800">Send Lead</h1>
                                        <div class="row">
                                            <div class="col-xl-12 col-lg-12">
                                                <div class="card shadow mb-4">
                                                    <div class="card-body">
                                                        <form action="/submitted/request" method="POST" class="form-horizontal mt32" enctype="multipart/form-data">
                                                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                                                            <input type="hidden" name="name" t-attf-value="#{name}" required="True" />
                                                            <input type="hidden" name="email" required="True" t-attf-value="#{email}" readonly="True" />

                                                            <div class="form-row"> 
                                                                <div class="form-group col-md-6 ">
                                                                    <label for="service">
                                                                        Service
                                                                        <span style="font-weight:800;color:red;">*</span>
                                                                    </label>
                                                                    <select class="form-control form-control-sm" id="service" name="service" required="True">
                                                                        <option value=""></option>

                                                                        <t t-foreach="services" t-as="service">
                                                                            <option t-attf-value="#{service.id}">
                                                                                <t t-esc="service.name" />
                                                                            </option>
                                                                        </t>
                                                                    </select>
                                                                </div>
                                                                <div class="form-group col-md-6 ">
                                                                    <label for="category">
                                                                        Category
                                                                        <span style="font-weight:800;color:red;">*</span>
                                                                    </label>
                                                                    <select class="form-control form-control-sm" id="category" name="category" required="True">
                                                                        <option value=""></option>

                                                                        <t t-foreach="categories" t-as="cat">
                                                                            <option t-attf-value="#{cat.id}">
                                                                                <t t-esc="cat.name" />
                                                                            </option>
                                                                        </t>
                                                                    </select>
                                                                </div>
                                                            </div> 
                                                            <div class="form-row">
                                                                <div class="form-group col-md-12">
                                                                    <label for="subject">
                                                                        Subject
                                                                        <span style="font-weight:800;color:red;">*</span>
                                                                    </label>
                                                                    <input type="text" class="form-control form-control-sm" name="subject" required="True" />
                                                                </div>
                                                            </div>
                                                            <div class="form-group">
                                                                <label for="attachment">Add Attachments</label>
                                                                <input class="form-control form-control-sm pb-4" name="attachment" id="attachment" type="file" multiple="multiple" style="padding: .1rem .75rem !important" />

                                                            </div>
                                                            <div class="form-group">
                                                                <label for="description">
                                                                    Description
                                                                    <span style="font-weight:800;color:red;">*</span>
                                                                </label>
                                                                <textarea class="form-control form-control-sm" name="description" required="required" rows="3"></textarea>
                                                            </div>

                                                            <button class="btn btn-primary btn-sm">Submit Lead</button>


                                                        </form>
                                                    </div>
                                                </div>


                                            </div>
                                        </div>
                                    </div>


                                </div>
                                <!-- /.container-fluid -->


                                <!-- End of Main Content -->

                                <!-- Footer -->
                                <t t-call="crmfront.crm_dashboard_footer" />
                                <!-- End of Footer -->

                            </div>
                            <!-- End of Content Wrapper -->


                            <!-- Scroll to Top Button-->
                            <a class="scroll-to-top rounded" href="#page-top">
                                <i class="fas fa-angle-up"></i>
                            </a>

                            <!-- Logout Modal-->
                            <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                                            <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">Ã—</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                                        <div class="modal-footer">
                                            <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                                            <a class="btn btn-primary" href="login.html">Logout</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </body>
                
                <t t-call="crmfront.crm_dashboard_scripts" />
            </html>
        </xpath>
    </template>
</odoo>