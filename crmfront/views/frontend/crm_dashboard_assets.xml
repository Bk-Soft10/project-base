<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--=========================CRM SCRIPTS======================-->
    <template id="crm_dashboard_scripts" name="Crm Scripts">
        <script type="text/javascript" src="/crmfront/static/src/js/crm_custom.js" />
        <script type="text/javascript" src="/crmfront/static/src/js/com1.js" />
        <script type="text/javascript" src="/crmfront/static/src/js/link.js" />
        <script type="text/javascript" src="/crmfront/static/src/vendor/jquery/jquery.min.js" />
        <script type="text/javascript" src="/crmfront/static/src/vendor/bootstrap/js/bootstrap.bundle.min.js" />
        <!-- Core plugin JavaScript-->
        <script type="text/javascript" src="/crmfront/static/src/vendor/jquery-easing/jquery.easing.min.js" />

        <!-- Custom scripts for all pages-->
        <script type="text/javascript" src="/crmfront/static/src/js/sb-admin-2.min.js" />

        <!-- Page level plugins -->
        <script type="text/javascript" src="/crmfront/static/src/vendor/chart.js/Chart.min.js" />
    
        <!-- Page level custom scripts -->
        <script type="text/javascript" src="/crmfront/static/src/js/demo/chart-area-demo.js" />
        <script type="text/javascript" src="/crmfront/static/src/js/demo/chart-pie-demo.js" />
        <!-- Page level plugins -->
        <script type="text/javascript" src="/crmfront/static/src/vendor/datatables/jquery.dataTables.min.js"></script>
        <script type="text/javascript" src="/crmfront/static/src/vendor/datatables/dataTables.bootstrap4.min.js"></script>

        <!-- Page level custom scripts -->
        <script type="text/javascript" src="/crmfront/static/src/js/demo/datatables-demo.js"></script>
        
        
    </template>

    <!--==================CRM DASHBOARD HEAD=======================-->
    <template id="crm_dashboard_head" name="Crm Head">
        <head>
            <meta charset="utf-8" />
            <meta http-equiv="X-UA-Compatible" content="IE=edge" />
            <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
            <meta name="description" content="" />
            <meta name="author" content="" />
            <title>
                <t t-esc="title" />
            </title>
            <link rel="stylesheet" href="/crmfront/static/src/css/sb-admin-2.min.css" />
            <link rel="stylesheet" href="/crmfront/static/src/css/style.css" />
            <link rel="stylesheet" href="/crmfront/static/src/css/ticket.css" />
            <link rel="stylesheet" href="/crmfront/static/src/vendor/fontawesome-free/css/all.min.css" />
            <!-- <link rel="stylesheet" href="/crmfront/static/src/vendors/ti-icons/css/themify-icons.cs" /> -->
            <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" />

            <link rel="stylesheet" href="static/src/css/com4.css" />
            <!-- Custom styles for this page -->
            <link href="/crmfront/static/src/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" />
        </head>
    </template>

    <!--==============SIDE BAR MENU================================-->
    <template id="crm_dashboard_sidebar" name="Crm Dashboard sidebar">
        <!-- Sidebar -->
        <ul class="navbar-nav sidebar sidebar-dark accordion" id="accordionSidebar" style="background-color:#4e73df;">
            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/my/leads">
                <div class="sidebar-brand-text mx-3">
                    CRM                                       
                </div> 
            </a>

            <div class="sidebar-heading">Menu</div>

            <!-- Nav Item - Pages Collapse Menu -->
            <li t-attf-class=" nav-item #{ticket_class}">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapsePages" aria-expanded="true" aria-controls="collapsePages">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>Customer Leads</span>
                </a>
                <div id="collapsePages" class="collapse" aria-labelledby="headingPages" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">

                        <a class="collapse-item" href="/my/leads?filterby=all">All</a>
                        <a class="collapse-item" href="/my/leads?filterby=1">Pending</a>
                        <a class="collapse-item" href="/my/leads?filterby=2">In Progress</a>
                        <a class="collapse-item" href="/my/leads?filterby=4">Done</a>
                        <a class="collapse-item" href="/my/leads?filterby=5">Cancelled</a>
                    </div>
                </div>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block" />

            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>
        </ul>
        <!-- End of Sidebar -->
    </template>

    <!--================SETTINGS MENU===============================-->
    <template id="crm_dashboard_topbar" name="crm Dashboard topbar">
        <!-- Topbar -->
        <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

            <!-- Sidebar Toggle (Topbar) -->
            <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                <i class="fa fa-bars"></i>
            </button>

            <!-- Topbar Search -->

            <a class="nav-link " href="/my/leads">
                <i class="fas fa-home "></i>
                <span class="d-none d-sm-inline-block">Dashboard</span>
            </a>

            <!-- Topbar Navbar -->
            <ul class="navbar-nav ml-auto">

                <!-- Nav Item - Search Dropdown (Visible Only XS) -->
                <t t-if="company_class is 'active' or service_class is 'active'">

                    <!-- Search bar shown on sm screens -->
                    <li class="nav-item dropdown no-arrow d-sm-none">
                        <a class="nav-link dropdown-toggle" href="#" id="searchDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-search fa-fw"></i>
                        </a>

                        <!-- Dropdown - Messages -->
                        <div class="dropdown-menu dropdown-menu-right p-3 shadow animated--grow-in" aria-labelledby="searchDropdown">
                            <form class="form-inline mr-auto w-100 navbar-search" method="post" t-attf-action="#{form_action}">
                                <input type="hidden" t-att-value="request.csrf_token()"/>
                                <t t-call="website.website_search_box"/>
                            </form>
                        </div>
                    </li>
                    
                    <!-- Search bar shown on md and xs screens -->
                    <form t-attf-action="#{form_action}" class="my-auto mw-100 d-none d-sm-inline-block" method="post">
                        <input type="hidden" t-att-value="request.csrf_token()"/>
                        <t t-call="website.website_search_box"/>
                    </form>
                </t>
                    
                    


                <div class="topbar-divider d-none d-sm-block"></div>

                <t t-set="is_connected" t-value="not user_id._is_public()" />
                <t t-set="_user_name" t-value="true" />


                <li t-if="is_connected" class="nav-item dropdown no-arrow">
                    <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span t-if="_user_name" t-attf-class="mr-2 d-none d-lg-inline text-gray-600 small #{_user_name_class}" t-esc="user_id.name[:23] + '...' if user_id.name and len(user_id.name) &gt; 25 else user_id.name" />
                        <t t-if = "user_id.image_1920">
                            <img class="rounded-circle oe_topbar_avatar" 
                            t-att-src="image_data_uri(user_id.image_1920)" 
                            height="35" width="35" alt=" User" />
                        </t>
                        <t t-if = "not user_id.image_1920">
                            <img class="rounded-circle oe_topbar_avatar" 
                            src="/crmfront/static/src/img/user.png"
                            height="35" width="35" alt=" User" 
                            />
                        </t>
                    </a>
                    <!-- Dropdown - User Information -->
                    <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
                        <a class="dropdown-item" href="/my/leads">
                            <i class="fas fa-home fa-sm fa-fw mr-2 text-gray-400"></i>
                            Dashboard
                        </a>
                        <a class="dropdown-item" href="#">
                            <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                            Profile
                        </a>
                    
                        <div class="dropdown-divider"></div>

                        <a role="menuitem" class="dropdown-item" data-menu="4" data-menu-xmlid="base.menu_administration" href="/portal/contactus">
                            <i class="fas fa-phone fa-sm fa-fw mr-2 text-gray-400"></i>
                            <span class="oe_menu_text">Contact Us</span>
                        </a>
                        <a class="dropdown-item" t-attf-href="/web/session/logout?redirect=/" role="menuitem" id="o_logout">
                            <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                            Logout
                        </a>

                    </div>
                </li>

            </ul>

        </nav>
        <!-- End of Topbar -->
    </template>

    <!--====================CRM DASHBOARD FOOTER=====================-->
    <template id="crm_dashboard_footer" name="Crm Footer">
        <footer class="sticky-footer bg-white">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>
                        Â©  
                        <span t-esc="time.strftime('%Y')"/> 
                        KOLA TECHNOLOGIES | ALL RIGHTS RESERVED
                    </span>
                </div>
            </div>
        </footer>
    </template>
</odoo>