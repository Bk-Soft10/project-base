<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!--=============== Customers Action ===============-->
	<record id="res_partner_action_customer" model="ir.actions.act_window">
		<field name="name">Customers</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">res.partner</field>
		<field name="view_mode">kanban,tree,form</field>
		<field name="context">{'search_default_customer': 1,'res_partner_search_mode': 'customer', 'default_is_company': True, 'default_customer_rank': 1}</field>
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
                Create a new customer in your address book
			</p>
			<p>
                CRM helps you easily track all activities related to a customer.
			</p>
		</field>
	</record>

	<!--==================Leads Action =================-->
	<record model="ir.actions.act_window" id="crm.crm_lead_all_leads">
		<field name="name">Leads</field>
		<field name="res_model">crm.lead</field>
		<field name="view_mode">kanban,tree,graph,pivot,calendar,form,activity</field>
		<field name="domain">['|', ('type','=','lead'), ('type','=',False)]</field>
		<field name="search_view_id" ref="crm.view_crm_case_leads_filter" />
		<field name="context">{                    
			'default_type':'lead',                    
			'search_default_type': 'lead',                    
			'search_default_to_process':1,
			}            
        </field>
	</record>
	
	<!--============= Opportunities Action =============-->
	<record model="ir.actions.act_window" id="crm_all_opportunities">
		<field name="name">Opportunities</field>
		<field name="res_model">crm.lead</field>
		<field name="view_mode">kanban,tree,graph,pivot,calendar,form,activity</field>
		<field name="domain">['|', ('type','=','opportunity'), ('type','=',False)]</field>
		<field name="search_view_id" ref="crm.view_crm_case_leads_filter" />
		<field name="context">{
                    'default_type':'opportunity',
                    'search_default_type': 'opportunity',
                    'search_default_to_process':1,
                }
            </field>
	</record>

	<!--==================Crm Menu Items================-->
	<menuitem name="CRM" 
		action = "crm.crm_lead_all_leads" 
		id = "crmfront_main_menu"
		sequence = "1"
	/>

	<menuitem name="Leads"
		id="crm_leads_menu" 
		parent="crmfront.crmfront_main_menu" 
		action="crm.crm_lead_all_leads" 
		sequence="5"
	/>

	<menuitem name="Opportunities"  
		id="crm_opportunity_menu" 
		parent="crmfront.crmfront_main_menu" 
		action="crmfront.crm_all_opportunities" 
		sequence="10"
	/>

	<menuitem name="Services"  
		id="crm_product_menu" 
		action="product.product_template_action" 
		parent="crmfront.crmfront_main_menu" 
		sequence="15"
	/>

	<menuitem name="Customers" 	 
		id="crm_customer_menu" 
		action="contacts.action_contacts" 
		parent="crmfront.crmfront_main_menu" 
		sequence="25" 
	/>
	
	<menuitem name="Configuration"
		id="crmfront_lead_config_main_menu"
        parent="crmfront.crmfront_main_menu"
        sequence="35"
    />

	<menuitem name="Categories"
		id="crm_lead_category_menu"
        parent="crmfront.crmfront_lead_config_main_menu"
        action="crmfront.crm_lead_category_action"
        sequence="15"
    />

	
	
	<record id="hr.menu_hr_root" model="ir.ui.menu">
        <field name="groups_id" eval="[(6,0, [ref('crmfront.business_admin')])]"/>
    </record>
	<record id="hr.menu_hr_root" model="ir.ui.menu">
        <field name="groups_id" eval="[(6,0, [ref('crmfront.business_admin')])]"/>
    </record>
	<record id="contacts.menu_contacts" model="ir.ui.menu">
        <field name="groups_id" eval="[(6,0, [ref('crmfront.business_admin')])]"/>
    </record>
	<record id="crm.crm_menu_root" model="ir.ui.menu">
        <field name="groups_id" eval="[(6,0, [ref('crmfront.make_invisible')])]"/>
    </record>

	
	
</odoo>
