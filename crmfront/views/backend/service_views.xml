<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--====service kanban-->
    <record id="product_template_kanban_view" model="ir.ui.view">
        <field name="name">product.template.inherit.kanban</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_kanban_view" />
        <field name="arch" type="xml">
            <field name ="name" position="attributes">
                <attribute name = "invisible">1</attribute>
            </field>
            <xpath expr="///div[@name='product_lst_price']" position='replace'>
                 <div name="product_lst_price" class="mt-4" style="font-size:1.2em;">
                    <field name="name"/>
                </div>
            </xpath>
        </field>
    </record>

    <!--=====service form===-->
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.inherit.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
                <label for="name" position="attributes">
                    <attribute name="string">Service Name</attribute>
                </label>
                    
                <field name="name" position="attributes">
                    <attribute name="placeholder">Service Name</attribute>
                </field>

                <field name="purchase_ok" position="after">
                    <group string =" Description">
                        <field name="description" placeholder = "Description of Service" nolabel="1"/>
                    </group>
                </field>

                <!--========HIDE THE FIELDS BELOW FROM SERVICE FORM======-->
                    <xpath expr="/form/sheet/notebook" position="attributes">
                        <attribute name='invisible'>1</attribute>
                    </xpath>
                
                    <label for="sale_ok" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </label>
                    <field name="sale_ok" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </field>

                    <label for="purchase_ok" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </label>
                    <field name="purchase_ok" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </field>

                    <field name="type" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </field>
                    <field name="categ_id" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </field>

                    <label for="list_price" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </label>
                    <field name="list_price" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </field>

                    <label for="standard_price" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </label>
                    <field name="standard_price" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </field>

                    <field name="default_code" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </field>

                    <field name="barcode" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </field>
                <!--========HIDE THE FIELDS ABOVE FROM SERVICE FORM======-->
            </field>
    </record>


    <!--=====service tree===-->
    <record id="product.product_template_action" model="ir.actions.act_window">
        <field name="name">Services</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">
            {"search_default_services": 1, 'default_type': 'service'}
        </field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No services found. Let's create one that your business offers!
            </p>
        </field>
    </record>
</odoo>