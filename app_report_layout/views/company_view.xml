<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="base.main_company" model="res.company">
            <field name="external_report_layout_id" ref="app_report_layout.app_external_layout_boxed"/>
        </record>
        
        <record id="res_company_inherit" model="ir.ui.view">
            <field name="name">inherit.company.report.layout</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="report_custom" string="Report Layout Custom">
                        <group colspan="4">
                            <field name="report_header_img" widget="image" class="oe_avatar"/>
                            <field name="report_footer_img" widget="image" class="oe_avatar"/>
                            <field name="external_report_layout_id"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>