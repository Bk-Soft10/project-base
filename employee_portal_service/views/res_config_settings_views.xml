<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_inherit_emp_portal" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.emp_portal</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="20"/>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <field name="favicon" position="after">
                    <label class="col-md-4 o_light_label" for="portal_id" />
                    <field name="portal_id" options="{'no_create': True}"/>
            </field>

        </field>
    </record>
</odoo>