<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="view_expense_page" name="Expense Form">
            <t t-call="employee_portal_service.employee_portal_layout">
                <div class="pcoded-inner-content">
                    <!-- Main-body start -->
                    <div class="main-body text-left">
                        <div class="page-wrapper">
                            <!-- Page body start -->
                            <div class="page-body">

                                <input type="hidden" id="record_id" name="record_id" t-att-value="expense_id.id"/>
                                <input type="hidden" id="model" name="model" t-att-value="expense_id._name"/>
                                <t t-set="o_portal_fullwidth_alert" groups="base.group_user">
                                    <t t-call="portal.portal_back_in_edit_mode">
                                        <t t-set="backend_url"
                                           t-value="'/web#model=hr.expense&amp;id=%s&amp;view_type=form' % (expense_id.id)"/>
                                    </t>
                                </t>
                                <div class="container">
                                    <div class="card">
                                        <p class="alert alert-success mb-4" t-if="message" role="status">
                                            <t t-esc="message"/>
                                        </p>
                                        <div class="card-header mb-3">
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <h2>
                                                        <span t-esc="expense_id.name or expense_id.display_name"/>
                                                    </h2>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-body">

                                            <div class="row">
                                                <div class="col-12 col-md-6">
                                                    <label><strong>Employee:</strong></label>
                                                    <span t-field="expense_id.employee_id"/>
                                                </div>
                                                <div class="col-12 col-md-6">
                                                    <label><strong>Date:</strong></label>
                                                    <span t-field="expense_id.date" t-options='{"widget": "date"}'/>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-12 col-md-6">
                                                    <label><strong>Description:</strong></label>
                                                    <span t-field="expense_id.name"/>
                                                </div>
                                                <div class="col-12 col-md-6">
                                                    <label><strong>Product:</strong></label>
                                                    <span t-field="expense_id.product_id.name"/>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-12 col-md-6">
                                                    <strong>Quantity:</strong>
                                                    <span t-field="expense_id.quantity"/>
                                                </div>
                                                <div class="col-12 col-md-6">
                                                    <strong>Unit Amount:</strong>
                                                    <span t-field="expense_id.unit_amount"/>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-12 col-md-6">
                                                    <strong>Total:</strong>
                                                    <span t-field="expense_id.total_amount"/>
                                                </div>
                                                <div class="col-12 col-md-6">
                                                    <strong>Status:</strong>
                                                    <span t-field="expense_id.state"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Page body end -->
                        </div>
                    </div>
                    <!-- Main-body end -->
                </div>
            </t>
        </template>
    </data>
</odoo>
