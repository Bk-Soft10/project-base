<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="employee_expenses_list_page" name="Expense List">
            <t t-call="employee_portal_service.employee_portal_layout">
                <div class="pcoded-inner-content">
                    <!-- Main-body start -->
                    <div class="main-body text-left">
                        <div class="page-wrapper">
                            <!-- Page body start -->
                            <div class="page-body">
                                <div name="emp_expense_lst" class="row">
                                    <t t-set="breadcrumbs_searchbar" t-value="True"/>
                                    <t t-call="portal.portal_searchbar">
                                        <t t-set="title">Expense List</t>
                                    </t>
                                    <t t-call="portal.portal_table">
                                        <thead>
                                            <tr class="active">
                                                <th>Description</th>
                                                <th>Date</th>
                                                <th>Total</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="expense_ids" t-as="expense_id">
                                                <tr>
                                                    <td>
                                                        <a t-attf-href="/portal/employee-expense/#{expense_id.id}?#{keep_query()}">
                                                            <t t-esc="expense_id.name or expense_id.display_name"/>
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <span t-field="expense_id.date"/>
                                                    </td>
                                                    <td>
                                                        <span t-field="expense_id.total_amount"/>
                                                    </td>
                                                    <td>
                                                        <t t-if="expense_id.state == 'draft'">
                                                            <span class="badge badge-pill badge-info">
                                                                <i class="fa fa fa-pencil"/>
                                                                To Submit
                                                            </span>
                                                        </t>
                                                        <t t-if="expense_id.state == 'reported'">
                                                            <span class="badge badge-pill badge-info">
                                                                <i class="fa fa fa-pencil"/>
                                                                Submitted
                                                            </span>
                                                        </t>
                                                        <t t-if="expense_id.state in ['approved', 'done']">
                                                            <span class="badge badge-pill badge-info">
                                                                <i class="fa fa fa-circle text-success"/>
                                                                Submitted
                                                            </span>
                                                        </t>
                                                        <t t-if="expense_id.state == 'refused'">
                                                            <span class="badge badge-pill badge-secondary">
                                                                <i class="fa fa fa-circle text-danger"/>
                                                                refused
                                                            </span>
                                                        </t>
                                                    </td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </t>
                                </div>
                            </div>
                            <!-- Page body end -->
                        </div>
                    </div>
                    <!-- Main-body end -->
                </div>
            </t>
        </template>
    </data>
</odoo>
