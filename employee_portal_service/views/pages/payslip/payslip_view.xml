<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="view_payslip_page" name="Payslip Form">
            <t t-call="employee_portal_service.employee_portal_layout">
                <div class="pcoded-inner-content">
                    <!-- Main-body start -->
                    <div class="main-body text-left">
                        <div class="page-wrapper">
                            <!-- Page body start -->
                            <div class="page-body">

                                <input type="hidden" id="record_id" name="record_id" t-att-value="payslip_id.id"/>
                                <input type="hidden" id="model" name="model" t-att-value="payslip_id._name"/>
                                <t t-set="o_portal_fullwidth_alert" groups="base.group_user">
                                    <t t-call="portal.portal_back_in_edit_mode">
                                        <t t-set="backend_url"
                                           t-value="'/web#model=hr.payslip&amp;id=%s&amp;view_type=form' % (payslip_id.id)"/>
                                    </t>
                                </t>
                                <div class="container">
                                    <div class="card">
                                        <p class="alert alert-success mb-4" t-if="message" role="status">
                                            <t t-esc="message"/>
                                        </p>
                                        <div class="card-header mb-3">
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <h2>
                                                        <span t-esc="payslip_id.name or payslip_id.display_name"/>
                                                    </h2>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-body">

                                            <div class="row">
                                                <div class="col-md-4 text-xs-left">
                                                    <a role="button" class="btn btn-primary d-none d-md-inline-block"
                                                       t-att-href="'/print/payslip-details?id=' + str(payslip_id.id)" target="_blank"
                                                       aria-label="Print" title="Print">
                                                        <i class="fa fa-print"></i>
                                                        Print
                                                    </a>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <t t-call="portal.portal_table">
                                                    <thead>
                                                        <tr class="active">
                                                            <th>No</th>
                                                            <th>Salary Rule</th>
                                                            <th>Category</th>
                                                            <th>Code</th>
                                                            <th>Total</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <t t-foreach="payslip_id.line_ids" t-as="payslip_line">
                                                            <tr>
                                                                <td>
                                                                    <t t-esc="payslip_line.slip_id.number" />
                                                                </td>
                                                                <td>
                                                                    <t t-esc="payslip_line.salary_rule_id.name"/>
                                                                </td>
                                                                <td>
                                                                    <t t-esc="payslip_line.category_id.name"/>
                                                                </td>
                                                                <td>
                                                                    <t t-esc="payslip_line.salary_rule_id.code"/>
                                                                </td>
                                                                <td>
                                                                    <span t-field="payslip_line.total"/>
                                                                </td>
                                                            </tr>
                                                        </t>
                                                    </tbody>
                                                </t>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Page body end -->
                        </div>
                    </div>
                    <!-- Main-body end -->
                </div>
            </t>
        </template>
    </data>
</odoo>
