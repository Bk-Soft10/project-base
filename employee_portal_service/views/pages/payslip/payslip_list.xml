<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="employee_payslips_list_page" name="Payslip List">
            <t t-call="employee_portal_service.employee_portal_layout">
                <div class="pcoded-inner-content">
                    <!-- Main-body start -->
                    <div class="main-body text-left">
                        <div class="page-wrapper">
                            <!-- Page body start -->
                            <div class="page-body">
                                <div name="emp_payslip_lst" class="row">
                                    <t t-set="breadcrumbs_searchbar" t-value="True"/>
                                    <t t-call="portal.portal_searchbar">
                                        <t t-set="title">Payslip List</t>
                                    </t>
                                    <t t-if="payslip_ids" t-call="portal.portal_table">
                                        <thead>
                                            <tr class="active">
                                                <th>Reference</th>
                                                <th>Date From</th>
                                                <th>Date To</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="payslip_ids" t-as="payslip_id">
                                                <tr>
                                                    <td>
                                                        <a t-attf-href="/portal/employee-payslip/#{payslip_id.id}?#{keep_query()}">
                                                            <t t-esc="payslip_id.number or payslip_id.display_name"/>
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <span t-field="payslip_id.date_from"/>
                                                    </td>
                                                    <td>
                                                        <span t-field="payslip_id.date_to"/>
                                                    </td>
                                                    <td>
                                                        <t t-if="payslip_id.state == 'draft'">
                                                            <span class="badge badge-pill badge-info">
                                                                <i class="fa fa fa-pencil"/>
                                                                Draft
                                                            </span>
                                                        </t>
                                                        <t t-if="payslip_id.state == 'verify'">
                                                            <span class="badge badge-pill badge-info">
                                                                <i class="fa fa fa-pencil"/>
                                                                Waiting
                                                            </span>
                                                        </t>
                                                        <t t-if="payslip_id.state == 'done'">
                                                            <span class="badge badge-pill badge-info">
                                                                <i class="fa fa fa-circle text-success"/>
                                                                Done
                                                            </span>
                                                        </t>
                                                        <t t-if="payslip_id.state == 'cancel'">
                                                            <span class="badge badge-pill badge-secondary">
                                                                <i class="fa fa fa-circle text-warning"/>
                                                                Rejected
                                                            </span>
                                                        </t>
                                                    </td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </t>
                                </div>
                            </div>
                            <!-- Page body end -->
                        </div>
                    </div>
                    <!-- Main-body end -->
                </div>
            </t>
        </template>
    </data>
</odoo>
