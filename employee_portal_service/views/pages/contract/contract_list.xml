<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="employee_contracts_list_page" name="Contract List">
            <t t-call="employee_portal_service.employee_portal_layout">
                <div class="pcoded-inner-content">
                    <!-- Main-body start -->
                    <div class="main-body text-left">
                        <div class="page-wrapper">
                            <!-- Page body start -->
                            <div class="page-body">
                                <div name="emp_contract_lst" class="row">
                                    <t t-set="breadcrumbs_searchbar" t-value="True"/>
                                    <t t-call="portal.portal_searchbar">
                                        <t t-set="title">Contract List</t>
                                    </t>
                                    <t t-if="contract_ids" t-call="portal.portal_table">
                                        <thead>
                                            <tr class="active">
                                                <th>Reference</th>
                                                <th>Start Date</th>
                                                <th>End Date</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="contract_ids" t-as="contract_id">
                                                <tr>
                                                    <td>
                                                        <a t-attf-href="/portal/employee-contract/#{contract_id.id}?#{keep_query()}">
                                                            <t t-esc="contract_id.name or contract_id.display_name"/>
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <span t-field="contract_id.date_start"/>
                                                    </td>
                                                    <td>
                                                        <span t-field="contract_id.date_end"/>
                                                    </td>
                                                    <td>
                                                        <t t-if="contract_id.state == 'draft'">
                                                            <span class="badge badge-pill badge-info">
                                                                <i class="fa fa fa-pencil"/>
                                                                New
                                                            </span>
                                                        </t>
                                                        <t t-if="contract_id.state == 'open'">
                                                            <span class="badge badge-pill badge-info">
                                                                <i class="fa fa fa-circle text-success"/>
                                                                Running
                                                            </span>
                                                        </t>
                                                        <t t-if="contract_id.state == 'close'">
                                                            <span class="badge badge-pill badge-secondary">
                                                                <i class="fa fa fa-circle text-danger"/>
                                                                Expired
                                                            </span>
                                                        </t>
                                                        <t t-if="contract_id.state == 'cancel'">
                                                            <span class="badge badge-pill badge-secondary">
                                                                <i class="fa fa fa-circle text-warning"/>
                                                                Cancelled
                                                            </span>
                                                        </t>
                                                    </td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </t>
                                </div>
                            </div>
                            <!-- Page body end -->
                        </div>
                    </div>
                    <!-- Main-body end -->
                </div>
            </t>
        </template>
    </data>
</odoo>
