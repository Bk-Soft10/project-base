<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="order_return_form_view" model="ir.ui.view">
        <field name="name">sale.order.return.form</field>
        <field name="model">sale.order.return</field>
        <field name="arch" type="xml">
            <form string="Sale Return">
                <sheet>
                    <div class="oe_title mb8">
                        <label for="name" class="oe_edit_only"/>
                        <h1 class="o_row">
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sale_id" readonly="1"/>
                            <field name="picking_id" readonly="1"/>
                            <field name="return_picking_id" readonly="1"/>
                            <field name="invoice_ids" readonly="1" widget="many2many_tags"/>
                            <field name="refund_invoice_ids"  widget="many2many_tags" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="return_reason" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="order_return_view_tree" model="ir.ui.view">
        <field name="name">sale.order.return.view.tree</field>
        <field name="model">sale.order.return</field>
        <field name="arch" type="xml">
            <tree string="Sale Return">
                <field name="name" />
                <field name="sale_id" />
                <field name="date" />
            </tree>
        </field>
    </record>

    <record id="order_return_view_search" model="ir.ui.view">
        <field name="name">sale.order.return.view.search</field>
        <field name="model">sale.order.return</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field name="name" />
                <field name="sale_id" />
            </search>
        </field>
    </record>

    <record id="order_return_action" model="ir.actions.act_window">
        <field name="name">Sale Return</field>
        <field name="res_model">sale.order.return</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new record
            </p>
        </field>
    </record>
    <menuitem id="menu_order_return_action"
              name="Returns"
              action="order_return_action"
              parent="sale_order_return_menu"
              sequence="100"/>

</odoo>