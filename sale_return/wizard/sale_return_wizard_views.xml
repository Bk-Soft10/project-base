<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_return_wizard_form_view" model="ir.ui.view">
        <field name="name">sale.return.wizard.form</field>
        <field name="model">sale.return.wizard</field>
        <field name="arch" type="xml">
            <form string="Sale Return">
                <sheet>
                    <group>
                        <group>
                            <field name="sale_id" />
                            <field name="picking_id" readonly="1"/>
                        </group>
                        <group >
                            <field name="journal_id" options="{'no_create_edit': True, 'no_open': True}"/>
                        </group>
                    </group>
                    <group string="Products">
                        <field name="lines" nolabel="1">
                            <tree create="0" delete="0" edit="1" editable="top">
                                <field name="product_id" readonly="1"/>
                                <field name="ordered_qty" string="Quantity" readonly="1"/>
                                <field name="product_uom_id" string="UoM" readonly="1"/>
                                <field name="price_unit" string="Price" readonly="1"/>
                                <field name="return_qty" string="To Return"/>
                                <button name="confirm_amount" class="btn btn-primary btn-block" string="Confirm Amount"/>
                            </tree>
                        </field>
                    </group>

                    <footer>
                        <button string="Process Return" type="object" name="process_return" class="oe_highlight"/>
                        <button string="Cancel" special="cancel" type="object" class="btn btn-secondary oe_inline"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sale_return_wizard_action" model="ir.actions.act_window">
        <field name="name">Sale Return</field>
        <field name="res_model">sale.return.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sale_return_wizard_form_view" />

        <field name="target">new</field>
    </record>

    <menuitem id="sale_order_return_menu"
              name="Returns"
              parent="sale.sale_menu_root"
              sequence="3"/>

    <menuitem id="sale_return_wizard_menu"
              name="Return Order"
              parent="sale_order_return_menu"
              action="sale_return_wizard_action"
              sequence="1"/>


</odoo>