<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="app_sale_report_view" model="ir.ui.view">
        <field name="name">Sale Report</field>
        <field name="model">wiz.so.report.app</field>
        <field name="arch" type="xml">
        <form string="Report Options">
            <group col="4">
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="status"/>
                <field name="report_type" invisible="1"/>
            </group>
            <group colspan="4">
                <field name="group_by"/>
                <field name="partner_ids" attrs="{'invisible': [('group_by', '!=', 'partner')]}" context="{'res_partner_search_mode': 'customer'}" options="{'no_create':True}" widget="many2many_tags"/>
                <field name="product_ids" domain="[('sale_ok', '=', True)]" attrs="{'invisible': [('group_by', '!=', 'product')]}" options="{'no_create':True}" widget="many2many_tags"/>
            </group>
            <footer>
                <button name="print_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                <button string="Cancel" class="btn btn-default" special="cancel" />
            </footer>
        </form>
        </field>
    </record>

    <record id="app_action_sale_report" model="ir.actions.act_window">
        <field name="name">Sale Report</field>
        <field name="res_model">wiz.so.report.app</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="app_sale_report_view"/>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_sale_report_app"
              parent="sale.menu_sale_report"
              action="app_action_sale_report"
              sequence="99"/>

</odoo>
