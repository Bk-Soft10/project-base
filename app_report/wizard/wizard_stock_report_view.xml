<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="app_stock_report_view" model="ir.ui.view">
        <field name="name">Stock Report</field>
        <field name="model">wiz.stock.report.app</field>
        <field name="arch" type="xml">
        <form string="Report Options">
            <group col="4">
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="status"/>
                <field name="report_type" invisible="1"/>
            </group>
            <group colspan="4">
                <field name="warehouse_id" invisible="1"/>
                <field name="location_ids" domain="[('usage', '=', 'internal')]" options="{'no_create':True}" widget="many2many_tags"/>
                <field name="product_ids" domain="[('type', '!=', 'service')]" options="{'no_create':True}" widget="many2many_tags"/>
                <field name="opening_balance"/>
            </group>
            <footer>
                <button name="print_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                <button string="Cancel" class="btn btn-default" special="cancel" />
            </footer>
        </form>
        </field>
    </record>

    <record id="app_action_stock_report" model="ir.actions.act_window">
        <field name="name">Stock Report</field>
        <field name="res_model">wiz.stock.report.app</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="app_stock_report_view"/>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_stock_report_app"
              parent="stock.menu_warehouse_report"
              action="app_action_stock_report"
              sequence="99"/>

</odoo>
