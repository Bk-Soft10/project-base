<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="view_so_report">
    <t t-call="web.html_container">
        <t t-call="web.external_layout">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <h2>SO Report</h2>
                    <h4>Date : <span t-field="doc.date_from"/> - <span t-field="doc.date_to"/></h4>
                    <h4>Sales Team : <span t-field="doc.team_id"/></h4>
                    <div class="oe_structure"/>
                    <t t-if="doc.group_by == 'product'">
                        <table class="table table-bordered custom_border">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Product</th>
                                    <th>Qty Ordered</th>
                                    <th>Qty Delevered</th>
                                    <th>Qty Invoiced</th>
                                    <th>Total of Price Sale</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="i" t-value="1"/>
                                <tr t-foreach="product_data" t-as="product">
                                    <td>
                                        <t t-esc="i"/>
                                    </td>
                                    <td>
                                        <span t-esc="product['product_name']" />
                                    </td>
                                    <td>
                                        <span t-esc="product['qty_order']" />
                                    </td>
                                    <td>
                                        <span t-esc="product['qty_delivered']" />
                                    </td>
                                    <td>
                                        <span t-esc="product['qty_invoiced']" />
                                    </td>
                                    <td>
                                        <span t-esc="product['price_unit']" />
                                    </td>
                                    <t t-set="i" t-value="i + 1"/>
                                </tr>
                            </tbody>
                        </table>
                    </t>
                    <t t-if="doc.group_by == 'partner'">
                        <table class="table table-bordered custom_border">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Customer</th>
                                    <th>No of Ordered</th>
                                    <th>Ordered Total</th>
                                    <th>Total Paid</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="i" t-value="1"/>
                                <tr t-foreach="partner_data" t-as="partner">
                                    <td>
                                        <t t-esc="i"/>
                                    </td>
                                    <td>
                                        <span t-esc="partner['partner']" />
                                    </td>
                                    <td>
                                        <span t-esc="partner['no_ordered']" />
                                    </td>
                                    <td>
                                        <span t-esc="partner['amount_total']" />
                                    </td>
                                    <td>
                                        <span t-esc="partner['paid_total']" />
                                    </td>
                                    <t t-set="i" t-value="i + 1"/>
                                </tr>
                            </tbody>
                        </table>
                    </t>
                    <t t-if="doc.group_by == 'user'">
                        <table class="table table-bordered custom_border">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>SalePerson</th>
                                    <th>No of Ordered</th>
                                    <th>Ordered Total</th>
                                    <th>Total Paid</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="i" t-value="1"/>
                                <tr t-foreach="saleperson_data" t-as="user">
                                    <td>
                                        <t t-esc="i"/>
                                    </td>
                                    <td>
                                        <span t-esc="user['user']" />
                                    </td>
                                    <td>
                                        <span t-esc="user['no_ordered']" />
                                    </td>
                                    <td>
                                        <span t-esc="user['amount_total']" />
                                    </td>
                                    <td>
                                        <span t-esc="user['paid_total']" />
                                    </td>
                                    <t t-set="i" t-value="i + 1"/>
                                </tr>
                            </tbody>
                        </table>
                    </t>
                </div>
            </t>
        </t>
    </t>
</template>
</odoo>