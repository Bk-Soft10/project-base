<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_loan_inherit_form_view" model="ir.ui.view">
            <field name="name">loan.inherit.form</field>
            <field name="model">hr.loan</field>
            <field name="inherit_id" ref="ohrms_loan.hr_loan_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='loan_amount']" position="after">
                    <field name="category_id"  attrs="{'readonly':[('state','in',('approve', 'refuse'))]}"/>
                </xpath>
            </field>
        </record>

        <record id="hr_loan_category_form_view" model="ir.ui.view">
            <field name="name">loan.category.form</field>
            <field name="model">loan.category</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group col="4">
                            <field name="name"/>
                            <field name="journal_id"/>
                            <field name="employee_account_id"/>
                            <field name="treasury_account_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

         <!--Loan Tree view-->
        <record id="hr_loan_tree_view" model="ir.ui.view">
            <field name="name">loan.category.tree</field>
            <field name="model">loan.category</field>
            <field name="arch" type="xml">
                <tree string="Loan Category">
                    <field name="name"/>
                    <field name="journal_id"/>
                </tree>
            </field>
        </record>

         <record id="action_hr_loan_category_id" model="ir.actions.act_window">
            <field name="name">Loan Category</field>
            <field name="res_model">loan.category</field>
            <field name="view_mode">tree,form</field>

        </record>


        <menuitem name="Category for Loan"
            parent="hr.menu_human_resources_configuration"
            id="menu_hr_loan_category_id"
            action="action_hr_loan_category_id"
            sequence="200"/>

    </data>
</odoo>
