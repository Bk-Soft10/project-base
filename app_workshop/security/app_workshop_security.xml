<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record model="ir.module.category" id="module_category_app_workshop">
            <field name="name">App Workshop</field>
            <field name="sequence">5</field>
    </record>

    <record id="group_app_workshop_dev" model="res.groups">
        <field name="name">Base</field>
        <field name="category_id" ref="module_category_app_workshop"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <!-- <field name="users" eval="[(4, ref('base.user_admin'))]"/> -->
    </record>
    <record id="group_app_workshop_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_app_workshop"/>
        <field name="implied_ids" eval="[(4, ref('app_workshop.group_app_workshop_dev'))]"/>
        <field name="comment">the user will be able to approve document .</field>
    </record>
    <record id="group_app_workshop_st_dep" model="res.groups">
        <field name="name">Stock-Order Department</field>
        <field name="category_id" ref="module_category_app_workshop"/>
        <field name="implied_ids" eval="[(4, ref('app_workshop.group_app_workshop_dev'))]"/>
        <field name="comment">the user will be able to approve document .</field>
    </record>
    <record id="group_app_workshop_inv_dep" model="res.groups">
        <field name="name">Account-Order Department</field>
        <field name="category_id" ref="module_category_app_workshop"/>
        <field name="implied_ids" eval="[(4, ref('app_workshop.group_app_workshop_dev'))]"/>
        <field name="comment">the user will be able to approve document .</field>
    </record>
    <record id="group_app_workshop_order_dep" model="res.groups">
        <field name="name">Work-Order Department</field>
        <field name="category_id" ref="module_category_app_workshop"/>
        <field name="implied_ids" eval="[(4, ref('app_workshop.group_app_workshop_dev'))]"/>
        <field name="comment">the user will be able to approve document .</field>
    </record>
    <record id="group_app_workshop_man" model="res.groups">
        <field name="name">Workshop Managment</field>
        <field name="category_id" ref="module_category_app_workshop"/>
        <field name="implied_ids" eval="[(4, ref('app_workshop.group_app_workshop_user')),(4, ref('app_workshop.group_app_workshop_st_dep')),(4, ref('app_workshop.group_app_workshop_inv_dep')),(4, ref('app_workshop.group_app_workshop_order_dep'))]"/>
        <field name="comment">the user will be able to approve document .</field>
        <field name="users" eval="[(4, ref('base.user_admin'))]"/>
    </record>

</odoo>
