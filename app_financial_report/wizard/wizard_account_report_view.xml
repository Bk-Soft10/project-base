<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="app_account_report_view" model="ir.ui.view">
        <field name="name">Account Ledger Report</field>
        <field name="model">wiz.account.report</field>
        <field name="arch" type="xml">
        <form string="Report Options">
            <group col="4">
                <field name="date_from" attrs="{'required': [('opening_balance','=',True)]}"/>
                <field name="date_to" attrs="{'required': [('opening_balance','=',True)]}"/>
                <field name="target_move"/>
                <field name="debit_credit"/>
                <field name="without_zero"/>
                <field name="report_type" invisible="0"/>
            </group>
            <group colspan="4">
                <field name="group_by"/>
                <field name="partner_ids" attrs="{'invisible': [('group_by', '!=', 'partner')]}" options="{'no_create':True}" widget="many2many_tags"/>
                <field name="account_ids" attrs="{'invisible': [('group_by', '!=', 'account')]}" options="{'no_create':True}" widget="many2many_tags"/>
                <field name="opening_balance"/>
            </group>
            <footer>
                <button name="print_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                <button string="Cancel" class="btn btn-default" special="cancel" />
            </footer>
        </form>
        </field>
    </record>

    <record id="app_action_account_report" model="ir.actions.act_window">
        <field name="name">Accounting Ledger</field>
        <field name="res_model">wiz.account.report</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="app_account_report_view"/>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_account_report_app"
              parent="app_financial_report.menu_financial_reports"
              action="app_action_account_report"
              sequence="99"/>

</odoo>
