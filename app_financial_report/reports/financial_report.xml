<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_financial">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.internal_layout">
                    <div class="page">
                        <h2 t-esc="data['account_report_id'][1]"/>

                        <div class="row mt32 mb32">
                            <div class="col-4">
                                <strong>Target Moves:</strong>
                                <p>
                                    <span t-if="data['target_move'] == 'all'">All Entries</span>
                                    <span t-if="data['target_move'] == 'posted'">All Posted Entries</span>
                                </p>
                            </div>
                            <div class="col-4">
                                <p>
                                    <strong>Date from :</strong> <span t-esc="data['date_from']"/><br/>
                                    <strong>Date to :</strong> <span t-esc="data['date_to']"/>
                                </p>
                            </div>
                        </div>

                        <table class="table table-sm table-reports" t-if="data['debit_credit'] == 1">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th t-if="data['opening_balance']" class="text-right">O-Debit</th>
                                    <th t-if="data['opening_balance']" class="text-right">O-Credit</th>
                                    <th t-if="data['opening_balance']" class="text-right"/>
                                    <th class="text-right">Debit</th>
                                    <th class="text-right">Credit</th>
                                    <th class="text-right"/>
                                    <th t-if="data['opening_balance']" class="text-right">C-Debit</th>
                                    <th t-if="data['opening_balance']" class="text-right">C-Credit</th>
                                    <th t-if="data['opening_balance']" class="text-right"/>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="get_account_lines" t-as="a">
                                    <t t-if="a['level'] != 0">
                                        <t t-set="debit" t-value="a.get('debit')"/>
                                        <t t-set="credit" t-value="a.get('credit')"/>
                                        <t t-set="balance" t-value="a.get('balance')"/>
                                        <t t-if="a.get('level') &gt; 3"><t t-set="style" t-value="'font-weight: normal;'"/></t>
                                        <t t-if="not a.get('level') &gt; 3"><t t-set="style" t-value="'font-weight: bold;'"/></t>
                                        <td>
                                            <span style="color: white;" t-esc="'..' * a.get('level', 0)"/>
                                            <span t-att-style="style" t-esc="a.get('name')"/>
                                        </td>

                                        <td t-if="data['opening_balance']" class="text-right" style="white-space: text-nowrap;">
                                            <t t-set="op_debit" t-value="a.get('op_debit')"/>
                                            <span t-att-style="style" t-esc="op_debit" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                        <td t-if="data['opening_balance']" class="text-right" style="white-space: text-nowrap;">
                                            <t t-set="op_credit" t-value="a.get('op_credit')"/>
                                            <span t-att-style="style" t-esc="op_credit" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                        <td t-if="data['opening_balance']" class="text-right" style="white-space: text-nowrap;">
                                            <t t-set="op_balance" t-value="a.get('op_balance')"/>
                                            <span t-att-style="style" t-esc="op_balance" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>

                                        <td class="text-right" style="white-space: text-nowrap;">
                                            <span t-att-style="style" t-esc="debit" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                        <td class="text-right" style="white-space: text-nowrap;">
                                            <span t-att-style="style" t-esc="credit" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                        <td class="text-right" style="white-space: text-nowrap;">
                                            <span t-att-style="style" t-esc="balance" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>

                                        <td t-if="data['opening_balance']" class="text-right" style="white-space: text-nowrap;">
                                            <t t-set="fn_debit" t-value="debit + op_debit"/>
                                            <span t-att-style="style" t-esc="fn_debit" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                        <td t-if="data['opening_balance']" class="text-right" style="white-space: text-nowrap;">
                                            <t t-set="fn_credit" t-value="credit + op_credit"/>
                                            <span t-att-style="style" t-esc="fn_credit" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                        <td t-if="data['opening_balance']" class="text-right" style="white-space: text-nowrap;">
                                            <t t-set="fn_balance" t-value="balance + op_balance"/>
                                            <span t-att-style="style" t-esc="fn_balance" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                    </t>
                                </tr>
                            </tbody>
                        </table>

                        <table class="table table-sm table-reports" t-if="not data['enable_filter'] and not data['debit_credit']">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th t-if="data['opening_balance']" class="text-right">Opening Balance</th>
                                    <th class="text-right">Balance</th>
                                    <th t-if="data['opening_balance']" class="text-right">Final Balance</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="get_account_lines" t-as="a">
                                    <t t-if="a['level'] != 0">
                                        <t t-set="balance" t-value="a.get('balance')"/>
                                        <t t-if="a.get('level') &gt; 3"><t t-set="style" t-value="'font-weight: normal;'"/></t>
                                        <t t-if="not a.get('level') &gt; 3"><t t-set="style" t-value="'font-weight: bold;'"/></t>
                                        <td>
                                            <span style="color: white;" t-esc="'..' * a.get('level', 0)"/>
                                            <span t-att-style="style" t-esc="a.get('name')"/>
                                        </td>
                                        <td t-if="data['opening_balance']" class="text-right">
                                            <t t-set="op_balance" t-value="a.get('op_balance')"/>
                                            <span t-att-style="style" t-esc="op_balance" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-att-style="style" t-esc="balance" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                        <td t-if="data['opening_balance']" class="text-right">
                                            <t t-set="fn_balance" t-value="balance + op_balance"/>
                                            <span t-att-style="style" t-esc="fn_balance" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                    </t>
                                </tr>
                            </tbody>
                        </table>

                        <table class="table table-sm table-reports" t-if="data['enable_filter'] == 1 and not data['debit_credit']">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th class="text-right">Balance</th>
                                    <th class="text-right"><span t-esc="data['label_filter']"/></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="get_account_lines" t-as="a">
                                    <t t-if="a['level'] != 0">
                                        <t t-if="a.get('level') &gt; 3"><t t-set="style" t-value="'font-weight: normal;'"/></t>
                                        <t t-if="not a.get('level') &gt; 3"><t t-set="style" t-value="'font-weight: bold;'"/></t>
                                        <td>
                                            <span style="color: white;" t-esc="'..'"/>
                                            <span t-att-style="style" t-esc="a.get('name')"/>
                                        </td>
                                        <td class="text-right"><span t-att-style="style" t-esc="a.get('balance')" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/></td>
                                        <td class="text-right"><span t-att-style="style" t-esc="a.get('balance_cmp')"/></td>
                                    </t>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <report
            id="action_report_financial"
            model="account.financial.report"
            string="Financial Statement"
            menu="False"
            report_type="qweb-pdf"
            name="app_financial_report.report_financial"
            file="app_financial_report.report_financial"
            />
    <report
        id="report_financial_xlsx"
        model="accounting.report"
        string="XLSX"
        report_type="xlsx"
        name="app_financial_report.report_financial_xlsx_template"
        file="app_financial_report.report_financial_xlsx_template"
        attachment="(object.report_id.report_name)"
        print_report_name="(object.report_id.report_name)"/>
</odoo>
