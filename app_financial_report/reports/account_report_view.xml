<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="view_account_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Accounting Ledger Report</h2>

                        <div class="row mt32 mb32">
                            <div class="col-4">
                                <strong>Target Moves:</strong>
                                <p>
                                    <span t-if="data['target_move'] == 'all'">All Entries</span>
                                    <span t-if="data['target_move'] == 'posted'">All Posted Entries</span>
                                </p>
                            </div>
                            <div class="col-4">
                                <p>
                                    <strong>Date from :</strong> <span t-esc="data['date_from']"/><br/>
                                    <strong>Date to :</strong> <span t-esc="data['date_to']"/>
                                </p>
                            </div>
                        </div>

                        <table class="table table-sm table-reports">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th t-if="o.show_summary">Date</th>
                                    <th t-if="o.show_summary">Ref</th>
                                    <!--<th t-if="data['opening_balance'] and data['debit_credit']" class="text-right">O-Debit</th>
                                    <th t-if="data['opening_balance'] and data['debit_credit']" class="text-right">O-Credit</th>-->
                                    <th t-if="data['opening_balance']" class="text-right">O-Balance</th>
                                    <th t-if="data['debit_credit']" class="text-right">Debit</th>
                                    <th t-if="data['debit_credit']" class="text-right">Credit</th>
                                    <th class="text-right">Balance</th>
                                    <!--<th t-if="data['opening_balance'] and data['debit_credit']" class="text-right">F-Debit</th>
                                    <th t-if="data['opening_balance'] and data['debit_credit']" class="text-right">F-Credit</th>-->
                                    <th t-if="data['opening_balance']" class="text-right">F-Balance</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="sum_op_balance" t-value="0"/>
                                <t t-set="sum_debit" t-value="0"/>
                                <t t-set="sum_credit" t-value="0"/>
                                <t t-set="sum_balance" t-value="0"/>
                                <t t-set="sum_fn_balance" t-value="0"/>
                                <t t-set="style" t-value="'color: blue !important;'"/>
                                <t t-if="o.show_summary"><t t-set="style" t-value="'color: green !important;'"/></t>
                                <t t-foreach="report_line_val" t-as="line">
                                    <tr>
                                        <t t-if="o.group_by == 'account'">
                                            <t t-set="name" t-value="line.get('account_name')"/>
                                        </t>
                                        <t t-if="o.group_by == 'partner'">
                                            <t t-set="name" t-value="line.get('partner_name')"/>
                                        </t>
                                        <t t-set="style" t-value="'font-weight: normal;'"/>
                                        <td t-if="o.show_summary" colspan="3">
                                            <span t-att-style="style" t-esc="name"/>
                                        </td>
                                        <td t-if="not o.show_summary">
                                            <span t-att-style="style" t-esc="name"/>
                                        </td>

                                        <!--<td t-if="data['opening_balance'] and data['debit_credit']" class="text-right" style="white-space: text-nowrap;">
                                            <span t-att-style="style" t-esc="line.get('op_debit')" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                        <td t-if="data['opening_balance'] and data['debit_credit']" class="text-right" style="white-space: text-nowrap;">
                                            <span t-att-style="style" t-esc="line.get('op_credit')" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>-->
                                        <td t-if="data['opening_balance']" class="text-right" style="white-space: text-nowrap;">
                                            <t t-set="sum_op_balance" t-value="sum_op_balance + line.get('op_balance')"/>
                                            <span t-att-style="style" t-esc="line.get('op_balance')" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>

                                        <td t-if="data['debit_credit']" class="text-right" style="white-space: text-nowrap;">
                                            <t t-set="sum_debit" t-value="sum_debit + line.get('debit')"/>
                                            <span t-att-style="style" t-esc="line.get('debit')" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                        <td t-if="data['debit_credit']" class="text-right" style="white-space: text-nowrap;">
                                            <t t-set="sum_credit" t-value="sum_credit + line.get('credit')"/>
                                            <span t-att-style="style" t-esc="line.get('credit')" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                        <td class="text-right" style="white-space: text-nowrap;">
                                            <t t-set="sum_balance" t-value="sum_balance + line.get('balance')"/>
                                            <span t-att-style="style" t-esc="line.get('balance')" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>

                                        <!--<td t-if="data['opening_balance'] and data['debit_credit']" class="text-right" style="white-space: text-nowrap;">
                                            <span t-att-style="style" t-esc="line.get('fn_debit')" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                        <td t-if="data['opening_balance'] and data['debit_credit']" class="text-right" style="white-space: text-nowrap;">
                                            <span t-att-style="style" t-esc="line.get('fn_credit')" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>-->
                                        <td t-if="data['opening_balance']" class="text-right" style="white-space: text-nowrap;">
                                            <t t-set="sum_fn_balance" t-value="sum_fn_balance + line.get('fn_balance')"/>
                                            <span t-att-style="style" t-esc="line.get('fn_balance')" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                    </tr>
                                    <t t-set="bl_progress" t-value="0"/>
                                    <t t-if="line.get('lines') and o.show_summary">
                                        <tr t-att-style="style" t-foreach="line.get('lines', [])" t-as="mv_line">
                                            <t t-set="ln_debit" t-value="mv_line.get('debit', 0)"/>
                                            <t t-set="ln_credit" t-value="mv_line.get('credit', 0)"/>
                                            <t t-set="ln_balance" t-value="mv_line.get('balance', 0)"/>
                                            <t t-set="bl_progress" t-value="bl_progress + ln_balance"/>
                                            <td class="text-left" style="white-space: text-nowrap;">
                                                <span t-esc="mv_line.get('ref')"/>
                                            </td>
                                            <td class="text-left" style="white-space: text-nowrap;">
                                                <span t-esc="mv_line.get('date')"/>
                                            </td>
                                            <td class="text-left" style="white-space: text-nowrap;">
                                                <span t-esc="mv_line.get('code')"/>
                                            </td>
                                            <td t-if="data['opening_balance']" class="text-right" style="white-space: text-nowrap;">
                                                <!--<span t-esc="line.get('op_balance')" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>-->
                                            </td>
                                            <td class="text-right" t-if="data['debit_credit']" style="white-space: text-nowrap;">
                                                <span t-esc="round(ln_debit, 2)"/>
                                            </td>
                                            <td class="text-right" t-if="data['debit_credit']" style="white-space: text-nowrap;">
                                                <span t-esc="round(ln_credit, 2)"/>
                                            </td>
                                            <td class="text-right" style="white-space: text-nowrap;">
                                                <span t-esc="round(bl_progress,2)"/>
                                            </td>
                                            <td t-if="data['opening_balance']" class="text-right" style="white-space: text-nowrap;">
                                                <!--<span t-esc="line.get('fn_balance')" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>-->
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                                <tr>
                                    <t>

                                        <t t-set="style" t-value="'font-weight: normal;'"/>
                                        <td>
                                            <span>SUM</span>
                                        </td>
                                        <td t-if="o.show_summary"/>
                                        <td t-if="o.show_summary"/>
                                        <td t-if="data['opening_balance']" class="text-right" style="white-space: text-nowrap;">
                                            <span t-esc="'{0:,.2f}'.format(round(sum_op_balance,2))"/>
                                        </td>

                                        <td t-if="data['debit_credit']" class="text-right" style="white-space: text-nowrap;">
                                            <span t-esc="'{0:,.2f}'.format(round(sum_debit,2))"/>
                                        </td>
                                        <td t-if="data['debit_credit']" class="text-right" style="white-space: text-nowrap;">
                                            <span t-esc="'{0:,.2f}'.format(round(sum_credit,2))"/>
                                        </td>
                                        <td class="text-right" style="white-space: text-nowrap;">
                                            <span t-esc="'{0:,.2f}'.format(round(sum_balance,2))"/>
                                        </td>
                                        <td t-if="data['opening_balance']" class="text-right" style="white-space: text-nowrap;">
                                            <span t-esc="'{0:,.2f}'.format(round(sum_fn_balance,2))"/>
                                        </td>
                                    </t>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <report
            id="action_account_report"
            model="wiz.account.report"
            string="Accounting Ledger"
            report_type="qweb-pdf"
            name="app_financial_report.view_account_report"
            file="app_financial_report.view_account_report"
            />
    <report
        id="report_ledger_xlsx"
        model="wiz.account.report"
        string="Accounting Ledger XLSX"
        report_type="xlsx"
        name="app_financial_report.report_ledger_xlsx_template"
        file="app_financial_report.report_ledger_xlsx_template"/>
</odoo>
