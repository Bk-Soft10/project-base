<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">


<t t-name="SearchPanel.MobileView.Filters">
    <div class="selection_filter o_searchview">
        <t t-if="emptySelection">Filters...</t>
        <t t-else="!emptySelection">
            <div class="o_searchview_input_container">
                <div t-foreach="categories" t-as="category" class="filter_category o_searchview_facet">
                    <i t-if="category.icon" t-attf-class="o_searchview_facet_label filter_icon fa #{category.icon}" t-attf-style="#{category.color ? ('background-color: ' + category.color) : undefined}"/>
                    <div class="o_facet_values">
                        <span t-esc="category.values.join('/')"/>
                    </div>
                </div>
                <div t-foreach="filters" t-as="filter" class="o_filter o_searchview_facet">
                    <i t-if="filter.icon" t-attf-class="o_searchview_facet_label filter_icon fa #{filter.icon}" t-attf-style="#{filter.color ? ('background-color: ' + filter.color) : undefined}"/>
                    <div class="o_facet_values">
                        <span t-esc="filter.values.join(', ')"/>
                    </div>
                </div>
            </div>
        </t>
    </div>
</t>

<t t-name="SearchPanel.MobileView">
    <t t-set="emptySelection" t-value="!categories.length &amp; !filters.length"/>
    <summary>
        <div class="d-flex align-items-center h-100">
            <i class="search_panel_close fa fa-fw fa-arrow-left"/>
            <i class="search_panel_collapse fa fa-fw fa-filter"/>
            <div class="selection_filter search_panel_collapse text-truncate ml-2 mr-auto">
                <t t-if="emptySelection">Filters...</t>
                <t t-else="!emptySelection">
                    <span t-foreach="categories" t-as="category" class="filter_category mr-1">
                        <i t-if="category.icon" t-attf-class="filter_icon fa #{category.icon}" t-attf-style="#{category.color ? ('color: ' + category.color) : undefined}"/>
                        <t t-esc="category.values.join('/')"/>
                    </span>
                    <span t-foreach="filters" t-as="filter" class="o_filter mr-1">
                        <i t-if="filter.icon" t-attf-class="filter_icon fa #{filter.icon}" t-attf-style="#{filter.color ? ('color: ' + filter.color) : undefined}"/>
                        <t t-esc="filter.values.join(', ')"/>
                    </span>
                </t>
            </div>
        </div>
    </summary>
    <t t-call="SearchPanel.MobileView.Filters"/>
    <button class="btn_search_panel_result btn btn-primary w-100 fixed-bottom">See result</button>
</t>
</templates>