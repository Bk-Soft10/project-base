<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_pos_pos_form_in" model="ir.ui.view">
        <field name="name">pos.order.form</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook//page//field[@name='lines']//tree//field[@name='price_unit']" position="after">
                <field name="our_price"/>
                <field name="unit_saving"/>
            </xpath>
            <xpath expr="//field[@name='amount_tax']" position="after">
                <field name="total_saving" force_save="1" nolabel="0" widget="monetary"/>
            </xpath>
        </field>
    </record>

</odoo>
