<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_extend_product_product_form" model="ir.ui.view">
        <field name="name">product.product.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <field name="to_weight" position="after">
                <label for="our_price_deduct"/>
                <div class="o_row col-5 pl-0">
                    <field name="our_price_deduct" widget='monetary' options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                </div>
                <label for="our_price"/>
                <div class="o_row col-5 pl-0">
                    <field name="our_price" widget='monetary' options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                </div>
            </field>
        </field>
    </record>

</odoo>
