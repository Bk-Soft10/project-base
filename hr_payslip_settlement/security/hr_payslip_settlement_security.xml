<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Rulles-->
        <record model="ir.module.category" id="module_category_hr_settlement">
            <field name="name">Employee Settlement</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_hr_settlement_user" model="res.groups">
            <field name="name">Officer</field>
            <field name="category_id" ref="hr_payslip_settlement.module_category_hr_settlement"/>
        </record>

        <record id="hr_payslip_settlement_rule" model="ir.rule">
            <field name="name">Employee settlement: Every Employee see only his records</field>
            <field name="model_id" ref="hr_payslip_settlement.model_hr_payslip_settlement"/>
            <field name="domain_force">['|',('employee_id.user_id', '=', user.id),('employee_id.parent_id.user_id', '=', user.id)]
            </field>
            <field name="groups" eval="[(4,ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="hr_payslip_settlement_manager_rule" model="ir.rule">
            <field name="name">Employee settlement: Managers Sees all records</field>
            <field name="model_id" ref="hr_payslip_settlement.model_hr_payslip_settlement"/>
            <field name="groups" eval="[
                                        (4,ref('hr_payroll_community.group_hr_payroll_user')),
                                        (4,ref('hr_payroll_community.group_hr_payroll_manager'))
                                        ]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>
