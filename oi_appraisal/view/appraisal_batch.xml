<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="view_appraisal_batch_form" model="ir.ui.view">
		<field name="name">appraisal.batch.form</field>
		<field name="model">appraisal.batch</field>
		<field name="arch" type="xml">
			<form>
				<header>
					<button name="%(act_appraisal_generate)d" type="action" string="Generate" class="oe_highlight" attrs="{'invisible' : [('active','=', False)]}" />
					<button name="action_submit_appraisal" type="object" string="Submit" class="oe_highlight" attrs="{'invisible' : [('appraisal_draft_count','=', 0)]}" confirm="Submit Appraisals?" />
					<field name="appraisal_draft_count" invisible="1" />
				</header>
				<sheet>
					<div class="oe_button_box" name="button_box">
						<button name="action_view_appraisal" type="object" class="oe_stat_button" icon="fa-wpforms">
							<field name="appraisal_count" string="Appraisals" widget="statinfo"/>
						</button>
					</div>
					<widget name="web_ribbon" text="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}" />
					<group>
						<group>
							<field name="name" />
							<field name="year" />
							<field name="type_id" />
						</group>
						<group>
							<field name="start_date" />
							<field name="end_date" />
							<field name="active" />
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>
	
	<record id="view_appraisal_batch_tree" model="ir.ui.view">
		<field name="name">appraisal.batch.tree</field>
		<field name="model">appraisal.batch</field>
		<field name="arch" type="xml">
			<tree>
				<field name="name" />
				<field name="year" />
				<field name="active" />
			</tree>
		</field>
	</record>	
	
	<record id="view_appraisal_batch_search" model="ir.ui.view">
		<field name="name">appraisal.batch.search</field>
		<field name="model">appraisal.batch</field>
		<field name="arch" type="xml">
			<search>
				<field name="name" />
				<field name="year" />
				<filter name="inactive" string="Inactive" domain="[('active','=', False)]" />
			</search>
		</field>
	</record>		

</odoo>