<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="invoice_document_report_qr">
        <t t-call="web.html_container">
            <!--<t t-call="web.external_layout">-->
            <t t-foreach="docs" t-as="o">

                <t t-set="lang" t-value="o.company_id.partner_id.lang" />
                <t t-call="web.basic_layout">
                    <t t-set="o" t-value="o.with_context(lang=lang)" />
                    <t t-set="company" t-value="res_company" />
                    <div class="page" dir="rtl" style="font-size:14px;">
                        <div class="oe_structure" />
                        <style>
                                @font-face {
                                  font-family: 'Cairo-Regular';
                                  src: url('/era_tax_partner/static/src/fonts/Cairo-Regular.ttf');
                                  }
                                 th {
                                   color:#7b5da5;
                                   background:#f2f2f2;
                                   font-family: Cairo-Regular !important;
                                   }
                                    td {
                                    font-family: Cairo-Regular !important;
                                   }
                                    * {
                                    font-family: Cairo-Regular !important;
                                    font-size: 14px;
                                   }

                            </style>
                        <br />
                        <br />
                        <div class="row">
                            <div class="col-4">
                                <div class="text-center" style="padding:3px; max-width:200px;margin:auto;text-align:right;">
                                    <h3>فاتورة ضريبية  INVOICE TAX</h3>
                                    <h3>
                                        <span t-field="o.name" />
                                    </h3>
                                </div>
                            </div>
                            <div class="col-4">
                                <!--<div class="text-center" style="background-color:#FFF;border: 3px solid #eeeded;padding:3px; max-width:200px;margin:auto;text-align:center;">
                                    <t t-esc="o.generate_qr_code()"/>
                                    <img t-att-src="image_data_uri(o.qr_code)" style="height: 150px;" alt="QR Code"/>
                                </div>-->
                            </div>
                            <div class="col-4">
                                <!--<img t-if="company.logo" t-att-src="image_data_uri(company.logo)" alt="Logo" style="max_height: 150px;max_width:150;height: 150px;width:150;text-align:left;" />-->
                                <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 80px;" alt="Logo"/>
                            </div>

                        </div>
                        <br />
                        <br />

                        <div class="row">
                            <div class="col-5 text-center">
                                <table class="table-sm" style="width: 100%;background-color: none;">
                                    <thead>
                                        <tr>
                                            <td style="border-left: solid 1px;">Name الاسم</td>
                                            <td>
                                                <span t-field="o.partner_id"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="border-left: solid 1px;">Address العنوان</td>
                                            <td>
                                                <span t-field="o.partner_id"
                                                    t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}' />
                                            </td>
                                        </tr>

                                        <tr t-if="o.partner_id and o.partner_id.vat">
                                            <td style="border-left: solid 1px;">VAT. المعرف الضريبي</td>
                                            <td>
                                                <span t-field="o.partner_id.vat" />
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="border-left: solid 1px;">Date التاريخ</td>
                                            <td>
                                                <span t-field="o.invoice_date" />
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="border-left: solid 1px;">Seller البائع</td>
                                            <td>
                                                <span t-field="o.user_id" />
                                            </td>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                            <div class="col-2 text-center">
                                <div class="text-center" style="background-color:#FFF;border: 3px solid #eeeded;padding:3px; max-width:200px;margin:auto;text-align:center;">
                                    <!--<t t-esc="o._generate_qr_code()" />
                                    <img t-att-src="image_data_uri(o.qr_image)" style="max-height: 150px;" alt="QR Code" />-->
                                    <t t-esc="o.generate_qr_code()"/>
                                    <img t-att-src="image_data_uri(o.qr_code)" style="height: 150px;" alt="QR Code"/>
                                </div>
                            </div>
                            <div class="col-5 text-center">
                                <table class="table-sm" style="width: 100%;background-color: none;">
                                    <thead>
                                        <tr>
                                            <td style="border-left: solid 1px;">Company Name</td>
                                            <td>
                                                <span t-field="o.company_id" />
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="border-left: solid 1px;">Company Address</td>
                                            <td>
                                                <span t-field="o.company_id.partner_id"
                                                    t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}' />
                                            </td>
                                        </tr>

                                        <tr>
                                            <td style="border-left: solid 1px;">Company Vat</td>
                                            <td>
                                                <span t-field="company.vat" />
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="border-left: solid 1px;">Phone</td>
                                            <td>
                                                <span t-field="company.partner_id.phone" />
                                            </td>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                        <br />
                        <div class="row text-center">
                            <div class="col-3 text-center"></div>

                            <div class="col-6 text-center">
                                <strong><span t-field="o.ref" /></strong>
                                <!--<strong><b>Company VAT : </b></strong>
                                <span t-field="company.vat" />-->
                            </div>

                            <div class="col-3 text-center"></div>
                        </div>

                        <!-- Is there a discount on at least one line? -->
                        <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])" />

                        <table class="table table-sm">
                            <thead>
                                <tr class="border-black">
                                    <t t-set="colspan" t-value="5" />
                                    <td class="text-right">
                                        الصنف
                                        <br />
                                        Items
                                    </td>
                                    <td class="text-center">
                                        السعر
                                        <br />
                                        U. Price
                                    </td>
                                    <td class="text-center">
                                        الكمية
                                        <br />
                                        Qty
                                    </td>
                                    <td class="text-center">
                                        <span>
                                            الخصم
                                            <br />
                                            Disc.(%)
                                        </span>
                                        <t t-set="colspan" t-value="colspan+1" />
                                    </td>
                                    <td class="text-center">
                                        <span>
                                            الضريبة
                                            <br />
                                            Taxes
                                        </span>

                                    </td>
                                    <td class="text-center">
                                        الاجمالي
                                        <br />
                                        Total
                                        <!--<t groups="account.group_show_line_subtotals_tax_excluded">Amount</t>
                            <t groups="account.group_show_line_subtotals_tax_included">Total Price</t>-->
                                    </td>
                                </tr>
                            </thead>
                            <tbody class="inv_tbody">

                                <t t-set="current_subtotal" t-value="0" />

                                <t t-foreach="o.invoice_line_ids" t-as="line">
                                    <t t-if="line.quantity > 0">

                                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded" />
                                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included" />

                                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                            <t t-if="not line.display_type">
                                                <td class="text-right">
                                                    <span dir="ltr" t-field="line.name" />
                                                </td>
                                                <td class="text-left">
                                                    <span t-field="line.price_unit" />
                                                </td>
                                                <td class="text-left">
                                                    <span t-field="line.quantity" />
                                                    <span t-field="line.product_uom_id" groups="uom.group_uom" />
                                                </td>
                                                <td class="text-left">
                                                    <span t-field="line.discount" />
                                                </td>
                                                <td class="text-left">
                                                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))" />
                                                </td>
                                                <td class="text-left o_price_total">
                                                    <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded" />
                                                    <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included" />
                                                </td>
                                            </t>
                                            <t t-if="line.display_type == 'line_section'">
                                                <td t-att-colspan="colspan">
                                                    <span t-field="line.name" />
                                                </td>
                                                <t t-set="current_section" t-value="line" />
                                                <t t-set="current_subtotal" t-value="0" />
                                            </t>
                                            <t t-if="line.display_type == 'line_note'">
                                                <td t-att-colspan="colspan">
                                                    <span t-field="line.name" />
                                                </td>
                                            </t>
                                        </tr>

                                        <t t-if="current_section and (line_last or o.invoice_line_ids[line_index+1].display_type == 'line_section')">
                                            <tr class="is-subtotal text-right">
                                                <td t-att-colspan="colspan">
                                                    <strong class="mr16">Subtotal</strong>
                                                    <span t-esc="current_subtotal" t-options='{"widget": "monetary", "display_currency": o.currency_id}' />
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                </t>
                            </tbody>
                        </table>
                        <div class="row">
                            <div class="col-4 text-center">
                            </div>

                            <div class="col-4 text-center">
                            </div>

                            <div class="col-4 text-center">
                                    <table class="table table-sm">
                                        <tr class="border-black o_subtotal" style="">
                                            <td>
                                                <strong>الاجمالي Total</strong>
                                            </td>
                                            <td class="text-right">
                                                <span class="text-left" t-esc="'%.2f'% o.amount_total" />
                                            </td>
                                        </tr>
                                        <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                                            <tr style="">
                                                <t t-if="amount_by_group[3] == 1 and o.amount_untaxed == amount_by_group[2]">
                                                    <td>
                                                        <span t-esc="amount_by_group[0]" />
                                                        <span>
                                                            &amp;nbsp;
                                                            <span>on</span>
                                                            &amp;nbsp;
                                                            <t t-esc="amount_by_group[2]" />
                                                        </span>
                                                    </td>
                                                    <td class="text-right o_price_total">
                                                        <span t-esc="amount_by_group[1]"/>
                                                    </td>
                                                </t>
                                                <t t-else="">
                                                    <td>
                                                        <span t-esc="amount_by_group[0]" />
                                                    </td>
                                                    <td class="text-right o_price_total">
                                                        <span class="text-left" t-esc="'%.2f'% amount_by_group[1]" />
                                                    </td>
                                                </t>
                                            </tr>
                                        </t>
                                        <tr class="border-black o_total">
                                            <td>
                                                <strong>المدفوع Paid</strong>
                                            </td>
                                            <td class="text-right">
                                                <span class="text-left" t-esc="'%.2f'% (o.amount_total - o.amount_residual)" />
                                            </td>
                                        </tr>
                                        <tr style="">
                                            <td>
                                                <strong>المتبقي Remain</strong>
                                            </td>
                                            <td class="text-right">
                                                <span class="text-left" t-esc="'%.2f'% o.amount_residual" />
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                        </div>
                        <div class="oe_structure" />
                        <br/>
                        <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">

                            <style>
                                @font-face {
                                  font-family: 'Cairo-Regular';
                                  src: url('/era_tax_partner/static/src/fonts/Cairo-Regular.ttf');
                                  }
                                 th {
                                   color:#7b5da5;
                                   background:#f2f2f2;
                                   font-family: Cairo-Regular !important;
                                   }
                                    td {
                                    font-family: Cairo-Regular !important;
                                   }
                                    * {
                                    font-family: Cairo-Regular !important;
                                    font-size: 14px;
                                   }

                            </style>
                            <div class="text-center" style="border-top: 1px solid black; font-family: Cairo-Regular !important;">
                                <ul class="list-inline mb4">

                                    <li t-if="company.phone" class="list-inline-item d-inline">Phone: <span class="o_force_ltr" t-field="company.phone"/></li>
                                    <li t-if="company.email" class="list-inline-item d-inline">Email: <span t-field="company.email"/></li>
                                    <li t-if="company.website" class="list-inline-item d-inline">Web: <span t-field="company.website"/></li>
                                    <li t-if="company.vat" class="list-inline-item d-inline"><t t-esc="company.country_id.vat_label or 'Tax ID'"/>: <span t-field="company.vat"/></li>
                                </ul>

                                <div name="financial_infos">
                                    <span t-field="company.report_footer"/>
                                </div>

                                <div t-if="report_type == 'pdf'" class="text-muted">
                                    Page: <span class="page"/> / <span class="topage"/>
                                </div>
                            </div>
                        </div>

                    </div>
                </t>
            </t>
            <!--</t>-->
        </t>

    </template>
    <record id="paperformat_invoices" model="report.paperformat">
        <field name="name">Invoices QR</field>
        <field name="default" eval="True" />
        <field name="format">custom</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">18</field>
        <field name="margin_bottom">28</field>
        <field name="margin_left">3</field>
        <field name="margin_right">3</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">15</field>
        <field name="dpi">90</field>
    </record>


    <report id="action_report_invksa_qr_app" string="Electronic Invoice" model="account.move" report_type="qweb-pdf" name="era_tax_partner.invoice_document_report_qr" />

    <record id="era_tax_partner.action_report_invksa_qr_app" model="ir.actions.report">
        <field name="paperformat_id" ref="era_tax_partner.paperformat_invoices" />
    </record>

</odoo>
